{{ attach_library('addtoany/addtoany') }}
<div class="homepage-spread-word">
    <div class="l-container">
        <div class="homepage-spread-word--intro large-title-block">
            <h2>{{ "Spread the word!"|t }}</h2>
            <p>{{ description }}</p>
        </div>
    </div>
</div>
<div class="homepage-twitter">
    <div class="l-container">
        <div class="homepage-twitter--links">
            <h3 class="homepage-twitter--links--action">{{ "Follow us on" }}</h3>
            <div class="homepage-twitter--links--logo-wrap">
                <div class="homepage-twitter--links--logo"></div>
            </div>
            <div class="homepage-twitter--links--link">
                <a href="https://twitter.com/hashtag/dctransylvania"
                   class="twitter-link">
                    <span class="twitter-prefix">&num;</span>
                    <span>{{ "DCTransylvania"|t }}</span>
                </a>
                <a href="https://twitter.com/dctransylvania"
                   class="twitter-link">
                    <span class="twitter-prefix">&commat;</span>
                    <span>{{ "DCTransylvania"|t }}</span>
                </a>
            </div>
        </div>
        <h3 class="homepage-twitter--action">{{ "...and spread the word!" }}</h3>
        <ul class="share-links a2a_kit a2a_kit_size_32 addtoany_list open">
            <li><a class="a2a_button_facebook share-links--link facebook"></a></li>
            <li><a class="a2a_button_google_plus share-links--link google-plus"></a></li>
            <li><a class="a2a_button_twitter share-links--link twitter"></a></li>
            <li><a class="a2a_button_linkedin share-links--link linkedin"></a></li>
        </ul>
    </div>
</div>
